<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
   <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.example.weatherforecast.ui.home.viewmodel.CityWeatherVM" />
    </data>



    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="7dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardElevation="5dp"
        >
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_trans"
>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_marginRight="4dp"
                android:layout_gravity="center"
                android:visibility="@{vm.myloc?View.VISIBLE:View.GONE , default=gone}"
                android:src="@drawable/loc"
                android:layout_marginEnd="4dp"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="@{vm.name}"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{vm.desc}"
        android:textSize="14sp"
        android:fontFamily="sans-serif-thin"
        android:layout_gravity="center"
        android:textColor="@color/grey"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/sunrise"
            android:tint="#00BCD4"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@{vm.tempMax}"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:tint="#FFC107"
            android:src="@drawable/sunset"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:text="@{vm.tempMin}"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:tint="#673AB7"
            android:src="@drawable/wind"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@{vm.wind}"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center"
            />
    </LinearLayout>





    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{vm.onItemSelection()}"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:visibility="@{vm.myloc?View.VISIBLE:View.GONE, default=gone}"
        android:background="@color/btn_color">

        <TextView
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/txt_details"/>
    </RelativeLayout>
</LinearLayout>



    </androidx.cardview.widget.CardView>
</layout>
